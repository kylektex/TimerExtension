
{
  "manifest_version": 2,

  "name": "Timer Extension",
  "description": "This extension will record the amount of time spent on each website",
  "version": "1.0",

  "background": {
    "scripts": ["content.js", "popup.js"],
    "persistent": false
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
   "activeTab",
   "tabs",
   "storage"
 ]
}
